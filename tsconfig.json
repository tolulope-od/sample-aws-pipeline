{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "skipLibCheck": true,
    "rootDir": "./src",
    "typeRoots": [
      "src/types/index.ts", "node_modules/@types"
    ],
    "noEmit": false,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "*": ["node_modules/*", "src/database", "src/helpers"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules", "**/build", "**/dist", "**/*.md"]
}
